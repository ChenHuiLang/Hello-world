from flask import Flask, request
import requests

app = Flask(__name__)


@app.route('/', methods=['GET', 'POST'])
def index():
    if request.method == 'POST':
        b = request.form['name']
        return '<h1>hi, %s</h1>' % b
    a = request.args.get('name')
    return '<h1>Hello %s!</h1>' % a


@app.route('/user/<name>')
def user(name):
    return '<h1>Hello, %s!</h1>' % name


if __name__ == '__main__':
    app.run(debug=True)
